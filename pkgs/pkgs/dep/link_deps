#!/bin/sh

export PATH=${coreutils}/bin

O=${out}/share/lapps/${LINKNAME}

mkdir -p $O
[ "${LDEPS}" != "" ] && mkdir $O/lib
[ "${BDEPS}" != "" ] && mkdir $O/bin
[ "${JDEPS}" != "" ] && mkdir -p $O/share/java

for D in ${LDEPS}; {
    ln -s ${D}/lib/*.so* $O/lib
}
for D in ${BDEPS}; {
    ln -s ${D}/bin/* $O/bin/
}
for D in ${JDEPS}; {
    ln -s ${D}/share/java/* $O/share/java
}

RFN=${O}/run.sh

cat >$RFN <<EOF
#!${SH}/bin/sh
export LD_LIBRARY_PATH=${O}/lib/
exec $(echo ${glibc}/lib/ld-linux*so*) \$@

EOF
chmod a+x $RFN
